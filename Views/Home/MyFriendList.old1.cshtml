@model IEnumerable<Project_Gossip.FriendList>

@{
    ViewBag.Title = "MyFriendList";
}

<h2>MyFriendList</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FriendsUsername)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FriendshipStatusId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FriendsUsername)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FriendshipStatusId)
        </td>
        <td>
            @Html.ActionLink("View Profile", "ViewProfile", new { id = item.Username }) |
            @Html.ActionLink("Message", "SendMessage", new { id = item.Username }) |
            @Html.ActionLink("Unfriend", "DeleteFriendRequest", new { id = item.Username })
        </td>
    </tr>
}

</table>
